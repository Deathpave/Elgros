@model Elgros.Models.GlobalModel
@{
    ViewData["Title"] = "Produkter";
}

@foreach (var item in Model.productModel.Products)
{
    if (item.Quantity < 1)
    {
        <div class="product soldout">
            <div class="productsimagewrapper">
                <img src="@item.PhotoUrl" alt="">
            </div>
            <div class="product-info">
                <div class="spacer"></div>
            </div>
        </div>
    }
    else
    {
        <div class="product">
            <div class="productsimagewrapper">
                <img src="@item.PhotoUrl" alt="">
            </div>
            <div class="product-info">
                <p>Antal tilbage: @item.Quantity</p>
                <div class="spacer"></div>
                <form action="products/saveitem" method="post">
                    <input type="hidden" value="@item.Id" name="item" />
                    <input type="submit" value="Tilføj til kurv" />
                </form>
            </div>
        </div>
    }

}