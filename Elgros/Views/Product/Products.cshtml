@model Elgros.Models.ProductModel
@{
    ViewData["Title"] = "Produkter";
}

@foreach (var item in Model.Products)
{
    if (item.Quantity < 1)
    {
        <div class="product soldout">
            <div class="productsimagewrapper">
                <img src="@item.PhotoUrl" alt="">
            </div>
            <div class="product-info">
                <div class="spacer"></div>
            </div>
        </div>
    }
    else
    {
        <div class="product">
            <div class="productsimagewrapper">
                <img src="@item.PhotoUrl" alt="">
            </div>
            <div class="product-info">
                <p>Antal tilbage: @item.Quantity</p>
                <div class="spacer"></div>
                <button>Lig i kurv</button>
            </div>
        </div>
    }
}